<?xml version='1.0' encoding='utf-8'?>
<widget id="com.darbon.horsegambling" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Horse Gambling</name>
    <description>
        Horse race gambling app.
    </description>
    <author email="darren@darrenarbon.co.uk" href="http://www.darrenarbon.co.uk">
        Darren Arbon
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="www/img/logo.png" />
    <preference name="orientation" value="landscape" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-sqlite-2" spec="^1.0.5" />
    <engine name="android" spec="^7.1.1" />
</widget>
